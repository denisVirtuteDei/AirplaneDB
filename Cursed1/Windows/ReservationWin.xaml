<Window x:Class="Cursed1.Windows.ReservationWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cursed1.Windows"
        mc:Ignorable="d"
        Title="ReservationWin" Height="500" Width="600" ResizeMode="NoResize">
    <Grid>
        <StackPanel Grid.Row="0" Margin="40" Orientation="Vertical">
           
            <TextBlock Text="ФИО" Margin="20,20,20,0"/>
            <TextBox x:Name="FIO"  Height="20" FontFamily="Segoe UI Symbol" Margin="20,0,20,20"/>
            
            <TextBlock Text="Address" Margin="20,20,20,0"/>
            <TextBox x:Name="Address" Height="20" FontFamily="Segoe UI Symbol" Margin="20,0,20,20"/>
            
            <TextBlock Text="Telephone" Margin="20,20,20,0"/>
            <TextBox x:Name="Telephone"  Height="20" FontFamily="Segoe UI Symbol" Margin="20,0,20,20"/>
            
            <TextBlock Text="E-mail" Margin="20,20,20,0"/>
            <TextBox x:Name="Mail"  Height="20" FontFamily="Segoe UI Symbol" Margin="20,0,20,20"/>

            <Button x:Name="OK" Content="OK" Margin="20,40,20,0" HorizontalAlignment="Right"
                    Width="45" Height="35" Click="OK_Click"/>

        </StackPanel>
    </Grid>
</Window>
